<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sapphire _ Exclusive <%=product.category%> Collection `24</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" type="image" href="/images/new.png">
  <link rel="stylesheet" href="/CSS/myStyles.css">

  <style>
    /* Card Styling */
    .card {
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      border-radius: 8px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .card:hover {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      transform: translateY(-5px);
    }

    .card-img-top {
      object-fit: cover;
      transition: transform 0.5s ease-out;
    }

    .card:hover .card-img-top {
      transform: scale(1.1);
    }

    .card-body {
      text-align: center;
      padding: 15px;
    }

    .card-title {
      font-size: 1.1rem;
      font-weight: bold;
    }

    .card-text {
      font-size: 1rem;
      font-weight: bold;
      color: #333;
    }

    /* Buttons */
    .btn-dark-cart, .btn-wishlist {
      font-size: 0.9rem;
      padding: 10px 15px;
      border-radius: 25px;
      transition: all 0.3s ease;
      text-transform: uppercase;
      font-weight: bold;
    }

    .btn-dark-cart {
      background: #007bff;
      color: #fff;
      border: 2px solid transparent;
    }

    .btn-dark-cart:hover {
      background: #0056b3;
      color: #fff;
      border-color: #0056b3;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0, 91, 187, 0.4);
    }

    .btn-wishlist {
      background: #fff;
      color: #ff4757;
      border: 2px solid #ff4757;
    }

    .btn-wishlist:hover {
      background: #ff4757;
      color: #fff;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(255, 71, 87, 0.4);
    }

    .btn-wishlist i {
      margin-right: 8px;
    }

    /* Navbar Styling */
    .navbar {
      background-color: #007bff;
    }

    .navbar .nav-link {
      color: white;
      font-weight: bold;
    }

    .navbar .nav-link:hover {
      color: #ff4757;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .btn-dark-cart, .btn-wishlist {
        font-size: 0.85rem;
        padding: 8px 12px;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="/">Sapphire Collection</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/wishlist">
              <i class="fas fa-heart"></i> Wishlist
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user_auth/login">Login</a>
          </li>
          <!-- Add more links as needed -->
        </ul>
      </div>
    </div>
  </nav>

  <!-- Container for Product Cards -->
  <div class="container mt-4">
    <!-- Title Section -->
    <h3 class="text-center mb-4 col-12 text-light justify-content-center">
      <%= product[0]?.category || "Products" %>
    </h3>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
      <!-- Product Cards -->
      <% product.forEach(product => { %>
        <div class="col">
          <div class="card shadow-sm h-100 border-0">
            <div class="position-relative overflow-hidden">
              <img src="/<%= product.image %>" alt="<%= product.title %>" class="card-img-top img-fluid">
            </div>
            <div class="card-body text-center">
              <h5 class="card-title mb-2"><%= product.title %></h5>
              <p class="text-muted mb-1 small"><%= product.category %></p>
              <p class="card-text">Rs. <%= product.price.toLocaleString() %></p>
              <div class="d-flex justify-content-center gap-2">
                <a href="/add-to-cart/<%= product._id %>" class="btn btn-dark-cart">Add to Cart</a>
                <a href="/add-to-wishlist/<%= product._id %>" class="btn btn-wishlist">
                  <i class="fas fa-heart"></i> Wishlist
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
