<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card-form">
                    <h2 class="text-center mb-4">
                        <i class="fas fa-box-open me-2"></i>Add New Category
                    </h2>
                    <form method="post" id="category-form">
                        <!-- Product Title -->
                        <div class="mb-3">
                            <label for="productTitle" class="form-label">
                                <i class="fas fa-tag me-2"></i>Product Title
                            </label>
                            <input type="text" id="productTitle" name="title" class="form-control" required
                                placeholder="Enter product name">
                        </div>

                        <!-- Image Source -->
                        <div class="mb-3">
                            <label for="productSource" class="form-label">
                                <i class="fas fa-image me-2"></i> Image Source
                            </label>
                            <input type="text" id="productSource" name="source" class="form-control" required
                                placeholder="Enter Image Source">
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="productDescription" class="form-label">
                                <i class="fas fa-comment-dots me-2"></i>Description
                            </label>
                            <textarea id="productDescription" name="description" class="form-control" rows="4" required
                                placeholder="Provide a detailed product description"></textarea>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label for="productPrice" class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>Price
                            </label>
                            <div class="input-group">
                                <input type="number" id="productPrice" name="price" class="form-control" required
                                    min="0" placeholder="0.00">
                            </div>
                        </div>

                        <!-- Category Dropdown -->
                        <div class="mb-3">
                            <label for="productCategory" class="form-label">
                                <i class="fas fa-list-alt me-2"></i>Category
                            </label>
                            <select id="productCategory" name="category" class="form-select" required>
                                <option value="" disabled selected>Select a category</option>
                                <option value="men">Men</option>
                                <option value="women">Women</option>
                                <option value="kids">Kids</option>
                                <option value="beauty">Beauty</option>
                                <option value="accessories">Accessories</option> 
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-custom w-100">
                                <i class="fas fa-plus me-2"></i>Add Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        const form = document.getElementById("category-form");
        const categoryDropdown = document.getElementById("productCategory")
        categoryDropdown.addEventListener("change",()=>{
            const selectedCategory = categoryDropdown.value;
            form.action = `/${selectedCategory}`;
        })
    </script>
</body>
